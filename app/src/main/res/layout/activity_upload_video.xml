<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".view.fragment.decorator.UploadVideoActivity">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <include layout="@layout/header_of_layout" android:id="@+id/header_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_marginTop="100dp"
        android:layout_below="@id/header_layout"

        >


        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Video"
            android:backgroundTint="@color/off_red_btn"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Video"
            android:backgroundTint="@color/off_red_btn"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/sizeoffile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            />
    </LinearLayout>

</RelativeLayout>




</RelativeLayout>